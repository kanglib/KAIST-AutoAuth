{
  "manifest_version": 3,
  "name": "KAIST AutoAuth",
  "version": "3.0",

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "js": [
      "main.js"
    ],
    "matches": [
      "*://iam2.kaist.ac.kr/#/checkOtp"
    ]
  }],

  "options_ui": {
    "browser_style": false,
    "page": "options.html"
  },

  "permissions": [
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "*://iam2.kaist.ac.kr/*"
  ]
}
